<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".tabel">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/headingback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="Company"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/headingback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="Company 1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/headingback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="Company 2"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="Entry age"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="18"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="65"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="Policy term"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="5"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="67"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="Premium payment term"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@drawable/rowsback"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:padding="10dp"
                android:text="67"
                android:textColor="@color/black" />
        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>